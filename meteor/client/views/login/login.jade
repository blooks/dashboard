template(name="login")
  .page-content.inset
    .row
      .col-md-12
        .col-sm-8.col-sm-offset-2
          form.form-signin(role="form")
                h2.form-signin-heading Please sign in.
                input.form-control(type="email", placeholder="Email address", required="", autofocus="", autocomplete="off")
                input.form-control(type="password", placeholder="Password", required="", autocomplete="off")
                .checkbox
                  input(type="checkbox", value="remember-me")
                  | Remember me
                button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
