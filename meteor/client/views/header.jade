            a(href="{{pathFor 'transactions'}}") 
              span.glyphicon.glyphicon-list-alt
              | {{i18n 'template.headings.transactions'}}
          li
            a(href="{{pathFor 'upload'}}") 
              span.glyphicon.glyphicon-circle-arrow-up
              | {{i18n 'template.headings.upload'}}
          li
            a(href="{{pathFor 'nodes'}}") {{i18n 'template.headings.accounts'}}
          li
            a(href="{{pathFor 'user_settings'}}")
              span.glyphicon.glyphicon-cog
              | {{i18n 'template.headings.settings'}}            
        ul.nav.navbar-nav.navbar-right
          +loginButtons